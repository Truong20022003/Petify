<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Back"
            android:src="@drawable/ic_left" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bevietnampro_bold"
            android:gravity="center"
            android:text="Địa chỉ của bạn"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="4dp"
            android:text="Đỗ Đoàn"
            android:textColor="@color/black"
            android:paddingBottom="10dp"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tvPhonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(+84) 0365816188"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ cụ thể"
            android:textColor="@color/black"
            android:paddingBottom="10dp"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Huyện Phúc Thọ, Hà Nội"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <Spinner
        android:id="@+id/spinnerProvinces"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        />

    <Spinner
        android:id="@+id/spinnerDistricts"
        android:layout_width="match_parent"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spinnerWards"
        android:layout_width="match_parent"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_AddressDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="20dp"
        android:hint="Nhập địa chỉ cụ thể" />

    <TextView
        android:id="@+id/tv_Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp"
        android:layout_gravity="center"
        android:text="Lưu"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_btn_review"
        android:fontFamily="@font/bevietnampro_semibold"
        android:textAlignment="center" />
</LinearLayout>