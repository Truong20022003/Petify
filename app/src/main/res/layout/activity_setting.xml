<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.setting.SettingActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="270dp"
            android:orientation="vertical"
            android:paddingHorizontal="10dp">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/bevietnampro_medium"
                android:gravity="center"
                android:text="Đoàn ĐT"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bevietnampro_regular"
                android:gravity="center"       android:maxLines="1"
                android:ellipsize="end"

                android:text="doandtph3777@fpt.edu.vn"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/ic_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_user_profile"
                android:drawableEnd="@drawable/ic_next"
                android:drawablePadding="20dp"
                android:fontFamily="@font/bevietnampro_medium"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Hồ sơ của bạn"
                android:textColor="@color/black"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/ic_order_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_order_history"
                android:drawableEnd="@drawable/ic_next"
                android:drawablePadding="20dp"
                android:fontFamily="@font/bevietnampro_medium"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Lịch sử đơn hàng của tôi"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ic_help_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_help"
                android:drawableEnd="@drawable/ic_next"
                android:drawablePadding="20dp"
                android:fontFamily="@font/bevietnampro_medium"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Trung tâm trợ giúp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ic_privacy_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_privacy_policy"
                android:drawableEnd="@drawable/ic_next"
                android:drawablePadding="20dp"
                android:fontFamily="@font/bevietnampro_medium"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Chính sách bảo mật"
                android:textColor="@color/black"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/ic_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_addfriend"
                android:drawableEnd="@drawable/ic_next"
                android:drawablePadding="20dp"
                android:fontFamily="@font/bevietnampro_medium"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Mời bạn bè"
                android:textColor="@color/black"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/ic_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_notification"
                android:drawableEnd="@drawable/ic_switch"
                android:drawablePadding="20dp"
                android:fontFamily="@font/bevietnampro_medium"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Thông báo"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/ic_change_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_change_password"
                android:drawableEnd="@drawable/ic_next"
                android:drawablePadding="20dp"
                android:fontFamily="@font/bevietnampro_medium"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Đổi mật khẩu"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_logout"
                android:drawableEnd="@drawable/ic_next"
                android:drawablePadding="20dp"
                android:fontFamily="@font/bevietnampro_medium"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Đăng xuất"
                android:textColor="@color/black"
                android:textSize="16sp" />


        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_bgProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-250dp"
                android:layout_marginBottom="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_top_profile" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@color/color_transparent"
                app:cardCornerRadius="60dp">

                <ImageView
                    android:id="@+id/iv_avtProfile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>
        </FrameLayout>

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="43dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_back"
            android:padding="20dp" />
    </FrameLayout>
</ScrollView>